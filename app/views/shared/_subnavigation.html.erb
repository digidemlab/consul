<div class="small-12 medium-9 column">
  <ul>
    <%= raw content_block("subnavigation_left", I18n.locale) %>

    <% if feature?(:debates) %>
      <li>
        <%= layout_menu_link_to t("layouts.header.debates"),
                                debates_path,
                                controller_name == "debates",
                                accesskey: "1",
                                title: t("shared.go_to_page") + t("layouts.header.debates") %>
      </li>
    <% end %>
    <% if feature?(:proposals) %>
      <li>
        <%= layout_menu_link_to t("layouts.header.proposals"),
                                proposals_path,
                                controller.class == ProposalsController,
                                accesskey: "2",
                                title: t("shared.go_to_page") + t("layouts.header.proposals") %>
      </li>
    <% end %>
    <% if feature?(:polls) %>
      <li>
        <%= layout_menu_link_to t("layouts.header.poll_questions"),
                                  polls_path,
                                  controller_name == "polls" || (controller_name == "questions" && controller.class.parent == Polls),
                                  accesskey: "3",
                                  title: t("shared.go_to_page") + t("layouts.header.poll_questions") %>
      </li>
    <% end %>
    <% if feature?(:legislation) %>
      <li>
        <%= layout_menu_link_to t("layouts.header.collaborative_legislation"),
                                legislation_processes_path,
                                controller.class.parent == Legislation,
                                accesskey: "4" %>
      </li>
    <% end %>
    <% if feature?(:budgets) %>
      <li>
        <%= layout_menu_link_to t("layouts.header.budgets"),
                                  budgets_path,
                                  current_page?(budgets_path),
                                  accesskey: "5",
                                  title: t("shared.go_to_page") + t("layouts.header.budgets") %>
      </li>
        <% if current_budget.accepting? %>
      <li>
        <%= layout_menu_link_to "Lämna förslag",
                                  new_budget_investment_path(current_budget.id),
                                  current_page?(new_budget_investment_path(current_budget.id)),
                                  accesskey: "7",
                                  title: t("shared.go_to_page") + "Lämna förslag" %>
      </li>
        <% end %>
      <li>
        <%= layout_menu_link_to "Alla förslag",
                                  budget_investments_path(current_budget.id, heading_id: 1),
                                  current_page?(budget_investments_path(current_budget.id, heading_id: 1)),
                                  accesskey: "8",
                                  title: t("shared.go_to_page") + "Alla förslag" %>
      </li>
      <li>
        <%= layout_menu_link_to "Regler och kriterier",
                                  "https://goteborg.se/wps/portal/enhetssida/medborgarbudget-i-majorna-linne/lamna-forslag-rosta/kriterier/!ut/p",
                                  false,
                                  accesskey: "9",
                                  title: t("shared.go_to_page") + "Regler och kriterier",
                                  target: "blank", rel: "nofollow" %>
      </li>
      <% if current_budget.finished? %>
      <li>
        <%= layout_menu_link_to "Resultat 2019",
                                  budget_results_path(current_budget, heading_id: current_budget.headings.first),
                                  current_page?(budget_results_path(current_budget, heading_id: current_budget.headings.first)),
                                  accesskey: "11",
                                  title: t("shared.go_to_page") + "Resultat 2019" %>
      </li>
      <% end %>
      <li>
        <%= layout_menu_link_to "Resultat 2018",
                                  "https://goteborg.se/wps/portal/enhetssida/medborgarbudget-i-majorna-linne/vad-ar-en-medborgarbudget-/medborgarbudget-2018/!ut/p",
                                  false,
                                  accesskey: "10",
                                  title: t("shared.go_to_page") + "Resultat 2018",
                                  target: "blank", rel: "nofollow" %>
      </li>
    <% end %>
    <% if feature?(:help_page) %>
      <li>
        <%= layout_menu_link_to t("layouts.header.help"),
                                help_path,
                                current_page?(help_path),
                                accesskey: "6",
                                title: t("shared.go_to_page") + t("layouts.header.help") %>
      </li>
    <% end %>

    <%= raw content_block("subnavigation_right", I18n.locale) %>
  </ul>
</div>
